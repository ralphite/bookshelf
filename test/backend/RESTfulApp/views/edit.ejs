<% include ./partials/header %>

<div class="ui main text container segmnet">
    <div ui huge header>Edit <%= blog.title%></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
                <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" value="<%= blog.image %>" name="blog[image]">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]"><%=blog.body %></textarea>
        </div>
    
    
    <input class="ui violet big basic button" type="submit">
    </form>
</div>

