<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to BookShelf!</h1>
    <p>View our hand-picked books from all over the world</p>
    <p>
      <a class="btn btn-lg btn-primary" href="/books/new">Add new book</a>
    </p>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% books.forEach(function(book){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= book.image %>" alt="" />
        <div class="caption">
          <h4><%= book.name %></h4>
        </div>
        <p>
          <a href="/books/<%= book._id %>" class="btn btn-small btn-primary">
            more detail
          </a>
        </p>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
